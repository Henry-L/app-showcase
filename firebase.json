{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|svg|webp)",
        "headers": [{ "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }]
      },
      {
        "source": "/index.html",
        "headers": [{ "key": "Cache-Control", "value": "no-store" }]
      }
    ],
    "rewrites": [
      {
        "source": "/apps/test-app",
        "run": { "serviceId": "test-app", "region": "us-central1" }
      },
      {
        "source": "/apps/test-app/**",
        "run": { "serviceId": "test-app", "region": "us-central1" }
      },
      {
        "source": "/apps/db-test",
        "run": { "serviceId": "db-test", "region": "us-central1" }
      },
      {
        "source": "/apps/db-test/**",
        "run": { "serviceId": "db-test", "region": "us-central1" }
      },
      {
        "source": "/apps/commute-tracker",
        "run": { "serviceId": "commute-tracker", "region": "us-central1" }
      },
      {
        "source": "/apps/commute-tracker/**",
        "run": { "serviceId": "commute-tracker", "region": "us-central1" }
      },
      {
        "source": "/apps/art-studio",
        "run": { "serviceId": "art-studio", "region": "us-central1" }
      },
      {
        "source": "/apps/art-studio/**",
        "run": { "serviceId": "art-studio", "region": "us-central1" }
      },
      {
        "source": "/apps/chess-slots",
        "run": { "serviceId": "chess-slots", "region": "us-central1" }
      },
      {
        "source": "/apps/chess-slots/**",
        "run": { "serviceId": "chess-slots", "region": "us-central1" }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
